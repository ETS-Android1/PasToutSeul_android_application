<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutActivityInscription"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orangeoff">


    <EditText
        android:id="@+id/editTextMailRegister"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:background="@drawable/rounded_bg"
        android:ems="10"
        android:hint="  Adresse e-mail"
        android:fontFamily="@font/montserrat"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameRegister"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/txtErrPwd2"
        android:layout_width="336dp"
        android:layout_height="25dp"
        android:textColor="@color/rouge_fonce"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister2"
        app:layout_constraintVertical_bias="0.0"
        android:fontFamily="@font/montserrat"/>

    <EditText
        android:id="@+id/editTextPasswordRegister"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:background="@drawable/rounded_bg"
        android:ems="10"
        android:hint="  Mot de passe"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMailRegister"
        app:layout_constraintVertical_bias="0.07"
        android:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/txtErrPwd1"
        android:layout_width="336dp"
        android:layout_height="25dp"
        android:textColor="@color/rouge_fonce"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordRegister2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtErrMailRegister"
        android:layout_width="336dp"
        android:layout_height="25dp"
        android:textColor="@color/rouge_fonce"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMailRegister"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextPasswordRegister2"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:background="@drawable/rounded_bg"
        android:ems="10"
        android:hint="  Répétez le mot de passe"
        android:fontFamily="@font/montserrat"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/editTextUsernameRegister"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:background="@drawable/rounded_bg"
        android:ems="10"
        android:hint="  Nom d'utilisateur "
        android:fontFamily="@font/montserrat"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:textColorHint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="createAccount"
        android:text="Créer un compte"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:background="@drawable/rounded_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister2"
        app:layout_constraintVertical_bias="0.077"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <Button
        android:id="@+id/btnGotAccount"
        android:layout_width="189dp"
        android:layout_height="39dp"
        android:background="@color/transparent"
        android:onClick="loginActivityBtn"
        android:text="Déja un compte ?"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount"
        app:layout_constraintVertical_bias="0.084" />


    <TextView
        android:id="@+id/txtErrUsername"
        android:layout_width="336dp"
        android:layout_height="25dp"
        android:textColor="@color/rouge_fonce"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextMailRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameRegister"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/pgrbInscription"
        style="?android:attr/progressBarStyle"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />


</androidx.constraintlayout.widget.ConstraintLayout>