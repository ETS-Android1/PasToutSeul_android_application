<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".menu">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/Avatar"
        android:onClick="Click2"
        android:src="@drawable/login_image" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#444"
        android:text="@string/prénom"
        android:textStyle="bold"
        android:textSize="25sp"
        android:onClick="Click2"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/identifiant"
        android:textColor="#777"
        android:onClick="Click2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="10" />

        <TextView
            android:id="@+id/textView6"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amis en ligne" />

        <TextView
            android:id="@+id/textView7"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#444"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="10"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" />

        <TextView
            android:id="@+id/textView8"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amis hors-ligne" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="60dp"
        android:textColor="#555"
        android:gravity="center"
        android:id="@+id/textView9"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="compte"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView10"
        android:textColor="#555"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="confidentialité et sécurité"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView11"
        android:textColor="#555"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="préférences"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView12"
        android:textColor="#555"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="A propos de notre appli"
        android:textSize="20sp"/>

</LinearLayout>